<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="com.epam.spring.core.beans.Client">
        <property name="id" value="1"/>
        <property name="fullName" value="John Smith"/>
    </bean>

    <bean id="eventLogger" class="com.epam.spring.core.loggers.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="com.epam.spring.core.loggers.FileEventLogger" init-method="init">
        <constructor-arg value="log.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="com.epam.spring.core.loggers.CacheFileEventLogger"
          destroy-method="destroy" parent="fileEventLogger">
        <constructor-arg value="10"/>
    </bean>

    <bean id="event" class="com.epam.spring.core.beans.Event" scope="prototype">

        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>

        <constructor-arg>
            <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>

        <property name="message" value="Some event for user 1"/>
    </bean>

    <bean id="app" class="com.epam.spring.core.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheFileEventLogger"/>
    </bean>

</beans>